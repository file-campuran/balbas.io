---
import { Picture } from "@astrojs/image/components";
import Container from "@/components/Container.astro";
import SiteLayout from "@/layouts/SiteLayout.astro";
// import photo from "/philip.jpeg";
---

<SiteLayout title="About">
  <h1>About</h1>
  <h1>The current URL is: {Astro.url}</h1>
  <h1>The current URL pathname is: {Astro.url.pathname}</h1>
  <h1>The current URL origin is: {Astro.url.origin}</h1>
  <Container className="mt-16 sm:32">
    <div class="grid grid-cols-1 gap-y-16 lg:grid-cols-2 lg:grid-rows-[auto_1fr] lg:gap-y-12">
      <div class="lg:pl-20">
        <div class="max-w-xs px-2.5 lg:max-w-none">
          <Picture
            src="/images/philip.jpeg"
            aspectRatio="4:4"
            alt="My Photo"
            widths={[100, 200, 400]}
            sizes="(min-width: 1024px) 32rem, 20rem"
          />
        </div>
      </div>
      <div class="lg:order-first lg:row-span-2">
        <h1 class="text-4xl font-bold tracking-tight text-zinc-800 dark:text-zinc-100 sm:text-5xl">
          I'm Philip Balbas. I live in the Philippines
        </h1>
        <div class="mt-6 space-y-7 text-base text-zinc-600 dark:text-zinc-400">
          <p>I am a self-taught developer. Since I was young, I always wanted to build things</p>
        </div>
      </div>
      <div class="lg:pl-20">
        <ul role="list">Social</ul>
      </div>
    </div>
  </Container>
</SiteLayout>
