---
import Card from "@/components/Card.svelte";
import CardDescription from "@/components/CardDescription.svelte";
import CardLink from "@/components/CardLink.svelte";
import Container from "@/components/Container.astro";
import SiteLayout from "@/layouts/SiteLayout.astro";
import { Image, Picture } from "@astrojs/image/components";

const projects = [
  {
    name: "APLI Internship App",
    link: "https://www.aplvirtualinternship.ph",
    description: "E-learning web app for pharmacy interns",
    image: "/images/apli.png",
  },
];
---

<SiteLayout title="Projects">
  <Container className="mt-12 sm:mt-24">
    <h2 class="text-2xl font-bold text-zinc-800 dark:text-zinc-100">Works</h2>
    <div class="mt-16 sm:mt-20">
      <ul role="list" class="grid grid-cols-1 gap-x-12 gap-y-16 sm:grid-cols-2 lg:grid-cols-3">
        {
          projects.map((project) => (
            <Card tag="li">
              <div class="relative z-10 flex w-full h-36 items-center justify-center bg-white shadow-md shadow-zinc-800/5 ring-1 ring-zinc-900/5 dark:border dark:border-zinc-700/50 dark:bg-zinc-800 dark:ring-0">
                <Picture
                  src={project.image}
                  widths={[400]}
                  aspectRatio="4:2"
                  sizes="(max-width: 800px) 100vw, 800px"
                  alt="My remote image"
                />
              </div>
              <h2 class="flex items-center justify-center mt-6 text-base font-semibold text-zinc-800 dark:text-zinc-400">
                <CardLink href={project.link} target="_blank">
                  {project.name}
                </CardLink>
              </h2>
              <CardDescription>{project.description}</CardDescription>
            </Card>
          ))
        }
      </ul>
    </div>
  </Container>
</SiteLayout>
